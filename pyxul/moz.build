include("pyxul.mk")

XPI_NAME = pyxul_name

DEFINES["PYXUL_ID"] = pyxul_id
DEFINES["PYXUL_VERSION"] = "-".join((pyxul_version, python_minversion))
DEFINES["TOOLKIT_MINVERSION"] = CONFIG["MOZ_APP_VERSION"]
